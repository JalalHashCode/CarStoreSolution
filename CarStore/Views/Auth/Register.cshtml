@using CarStore.Models.Dto
@model RegisterationRequestDTO


<div class="container">
	<div class="row justify-content-center">
		<h1 class="col-md-7">Register</h1>
	</div>

</div>
<form method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-7 mb-2">
				<input asp-for="UserName" type="text" placeholder="UserName" class="form-control" />
			</div>
			<div class="col-md-7 mb-2">
				<input asp-for="Name" type="text" placeholder="Name" class="form-control" />
			</div>
			<div class="col-md-7 mb-2">
				<input asp-for="Role" type="text" placeholder="Role" class="form-control" />
			</div>
			<div class="col-md-7 mb-2">
				<input asp-for="Password" type="password" placeholder="Password" class="form-control" />
			</div>
			<div class="col-md-7">
				<button type="submit" class="btn btn-primary w-100">Submit</button>
			</div>
		</div>
	</div>

</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
