@using CarStore.Models.Dto
@model LoginRequestDTO



<div class="container">
	<div class="row justify-content-center">
		<h1 class="col-md-7">Login</h1>
	</div>

</div>
<form method="post">
	<div class="container">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="row justify-content-center">
			<div class="col-md-7">
				<input asp-for="UserName" type="text" placeholder="UserName" class="form-control col-md-7 mb-2" />
			</div>
			<div class="col-md-7">
				<input asp-for="Password" type="password" placeholder="Password" class="form-control col-md-7 mb-2" />
			</div>
			<div class="col-md-7">
				<button type="submit" class="btn btn-primary">Login</button>
			</div>
		</div>

	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}