@using CarStore.Models.Dto
@model IEnumerable<CarDTO>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Cars List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller ="car" action="CreateCar" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create New Car</a>
		</div>

	</div>

	<table class="table border">
		<thead>
			<tr>
				<th>Name</th>
				<th>Model</th>
				<th>Price</th>
				<th></th>
				
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model){
				<tr>	
					<td>@item.Name</td>
					<td>@item.Model</td>
					<td>@item.Price</td>
					<td>
						<a asp-controller="car" action="EditCar" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="car" action="DeleteCar" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></a>

					</td>
				</tr>
			}
		</tbody>
	</table>
</div>